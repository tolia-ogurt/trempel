<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home_page"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.trempel.login.ui.SignInFragment"
        android:label="LoginFragment"
        tools:layout="@layout/sign_in_fragment">
        <action
            android:id="@+id/action_loginFragment_to_homePageFragment"
            app:destination="@id/homePageFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.trempel.home_page.ui.HomePageFragment"
        android:label="HomePageFragment"
        tools:layout="@layout/home_page_fragment">
        <action
            android:id="@+id/action_homePageFragment_to_homeCategoryFragment"
            app:destination="@id/homeCategoryFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeCategoryFragment"
        android:name="com.trempel.categories.ui.categories.CategoryFragment"
        tools:layout="@layout/category_fragment">
        <action
            android:id="@+id/action_categoryFragment_to_categoryProductsFragment"
            app:destination="@id/nav_graph_category_products">
            <argument
                android:name="category"
                app:argType="com.trempel.categories.model.CategoryDomainModel" />
        </action>
    </fragment>
    <include app:graph="@navigation/nav_graph_category_products" />
    <include app:graph="@navigation/nav_graph_categories" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.trempel.home_page.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/search_result_fragment">
        <action
            android:id="@+id/action_searchFragment_to_nav_graph_pdp"
            app:destination="@id/nav_graph_pdp">

            <argument
                android:name="productId"
                app:argType="integer" />
        </action>
        <argument
            android:name="keyWord"
            app:argType="string" />
    </fragment>
    <include app:graph="@navigation/nav_graph_pdp" />
</navigation>