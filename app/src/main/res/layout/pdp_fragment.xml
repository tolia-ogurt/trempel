<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iV_product"
        android:layout_width="0dp"
        android:layout_height="272dp"
        android:layout_marginStart="@dimen/large_250"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginEnd="@dimen/large_250"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_product" />

    <View
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iV_product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/normal_150"
        android:background="@drawable/ic_rectangle_1" />

    <TextView
        android:id="@+id/productTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_150"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginEnd="@dimen/normal_150"
        android:fontFamily="@font/montserrat_black"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/productPrice"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView"
        android:text="@string/product_title"
        />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginEnd="@dimen/normal_150"
        android:font="@font/montserrat_light"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView"
        android:text="@string/product_price"
        />

    <RatingBar
        android:id="@+id/productRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_150"
        android:layout_marginTop="@dimen/small_100"
        android:numStars="5"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintTop_toBottomOf="@id/productTitle"
        tools:rating="5" />

    <TextView
        android:id="@+id/scoreProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_100"
        android:fontFamily="@font/montserrat_black"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/productRating"
        app:layout_constraintStart_toEndOf="@id/productRating"
        app:layout_constraintTop_toTopOf="@id/productRating"
        tools:text="5" />

    <TextView
        android:id="@+id/productScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_100"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/productRating"
        app:layout_constraintStart_toEndOf="@id/productRating"
        app:layout_constraintTop_toTopOf="@id/productRating"
        android:text="@string/product_score"
        />

    <TextView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/productRating"
        app:layout_constraintStart_toEndOf="@id/productScore"
        app:layout_constraintTop_toTopOf="@id/productRating"
        android:text="@string/product_reviews"
        />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/normal_150"
        android:layout_marginTop="@dimen/normal_150"
        android:layout_marginEnd="@dimen/normal_150"
        android:layout_marginBottom="@dimen/normal_200"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_light"
        android:maxLines="5"
        android:text="@string/product_description"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btnAddToCart"
        app:layout_constraintTop_toBottomOf="@id/productScore"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"
        />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/normal_150"
        android:layout_marginEnd="@dimen/normal_150"
        android:layout_marginBottom="@dimen/normal_150"
        android:background="@drawable/btn_add_to_cart"
        android:fontFamily="@font/montserrat_light"
        android:text="@string/btn_title"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintEnd_toEndOf="@id/cardView"
        app:layout_constraintStart_toStartOf="@id/cardView" />
</androidx.constraintlayout.widget.ConstraintLayout>